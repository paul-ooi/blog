<footer class="footer">
  <nav class="footer__menu" aria-label="footer navigation">
    <ul class="footer__menu-list">
      {% for name, url in nav %}
        <li class="footer__menu-item">
          <a class="footer__menu-link" {% if (url === page.url) %}aria-current="page" {% endif %} {% if (page.url.split('/').pop() != url) %} href="{{ url }}" {% endif %} >{{ name }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
  <small class="footer__copyright">&copy; Paul Ooi Web Development</small>
</footer>